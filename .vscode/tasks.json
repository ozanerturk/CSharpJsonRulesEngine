{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "-p",
                "${workspaceFolder}/RuleEngine"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RuleEngine/RuleEngine.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}